<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#C7E1BE"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="나의 팜"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginVertical="5dp"
        android:background="#D9D9D9">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:text="장치"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:text="데이터"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:text="물주기"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_vertical|center">

            <Button
                android:id="@+id/plantName2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/round"
                android:gravity="center_vertical|center"
                android:text="★몬스테라"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:layout_marginVertical="5dp"
            android:gravity="center_vertical|center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/round"
                android:textSize="10dp"
                android:textColor="#FFFFFF"
                android:gravity="center_vertical|center"
                android:text="★현재 습도 :"/>

            <TextView
                android:id="@+id/plantmoisture1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/round"
                android:textSize="10dp"
                android:textColor="#FFFFFF"
                android:gravity="center_vertical|center"
                android:text="00"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_vertical|center">

            <Button
                android:id="@+id/btn_send1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:onClick="onClickButtonSend1"
                android:gravity="center_vertical|center"
                android:text="★" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_vertical|center">

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/round"
                android:textSize="10dp"
                android:textColor="#FFFFFF"
                android:gravity="center_vertical|center"
                android:text="★몬스테라"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:layout_marginVertical="5dp"
            android:gravity="center_vertical|center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/round"
                android:textSize="10dp"
                android:textColor="#FFFFFF"
                android:gravity="center_vertical|center"
                android:text="★현재 습도 :"/>

            <TextView
                android:id="@+id/plantmoisture2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/round"
                android:textSize="10dp"
                android:textColor="#FFFFFF"
                android:gravity="center_vertical|center"
                android:text="00"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_vertical|center">

            <Button
                android:id="@+id/btn_send2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:onClick="onClickButtonSend2"
                android:gravity="center_vertical|center"
                android:text="★" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_vertical|center">

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/round"
                android:textSize="10dp"
                android:textColor="#FFFFFF"
                android:gravity="center_vertical|center"
                android:text="★몬스테라"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:layout_marginVertical="5dp"
            android:gravity="center_vertical|center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/round"
                android:textSize="10dp"
                android:textColor="#FFFFFF"
                android:gravity="center_vertical|center"
                android:text="★현재 습도 :"/>

            <TextView
                android:id="@+id/plantmoisture3"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/round"
                android:textSize="10dp"
                android:textColor="#FFFFFF"
                android:gravity="center_vertical|center"
                android:text="00"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_vertical|center">

            <Button
                android:id="@+id/btn_send3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:onClick="onClickButtonSend3"
                android:gravity="center_vertical|center"
                android:text="★" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_paired"
            android:layout_width="141dp"
            android:layout_height="50dp"
            android:background="@drawable/bluetooth_round"
            android:gravity="center_vertical|center"
            android:onClick="onClickButtonPaired"
            android:text="블루투스 연결"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />

        <TextView
            android:layout_width="134dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center"
            android:text="★현재 조도 상태 :"
            android:textColor="#000000"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/plantbrighter"
            android:layout_width="134dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center"
            android:text="00"
            android:textColor="#000000"
            android:textSize="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="STATUS"
        android:textSize="20dp" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="264dp"
        app:layout_constraintLeft_toLeftOf="@id/btn_paired"
        app:layout_constraintRight_toRightOf="@id/btn_paired"
        app:layout_constraintTop_toBottomOf="@id/btn_paired" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="#C7E1BE"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center">

                <Button
                    android:layout_width="60dp"
                    android:layout_height="90dp"
                    android:background="@drawable/bottom"
                    android:gravity="center_vertical|center"
                    android:text="홈"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center">

                <Button
                    android:layout_width="60dp"
                    android:layout_height="90dp"
                    android:background="@drawable/bottom"
                    android:gravity="center_vertical|center"
                    android:text="식물도감"
                    android:textColor="#FFFFFF"
                    android:onClick="plantOnClick"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
